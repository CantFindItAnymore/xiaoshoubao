.mask {
  height: 100%;
  width: 100%;
  background: #000000;
  opacity: 0.3;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.notice-container {
  height: 296rpx;
  width: 510rpx;
  background: #fff;
  opacity: 1 !important;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  z-index: 999;
}

.notice {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  flex: 1;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 100%;
  height: 104rpx;
  color: #F69603;
  font-size: 32rpx;
  border-top: 1rpx solid #EEEEEE;
  display: flex;
  align-items: center;
  justify-content: center;
}