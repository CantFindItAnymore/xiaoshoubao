.container {
  width: 660rpx;
  height: 606rpx;
  padding: 60rpx 75rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 2rpx 2rpx 8rpx #888;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.can-draw-container {
  width: 100%;
}

.can-draw-container > view {
  display: inline-block;
  margin-right: 30rpx;
  font-size: 32rpx;
  color: #585A60;
}

.draw-input-container {
  width: 100%;
  height: 224rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.input-container {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #D8D8D8;
}

.draw-title {
  font-size: 32rpx;
  color: #585A60;
}

.draw-icon {
  font-size: 48rpx;
  color: #585A60;
}

.ph-style {
  font-size: 28rpx;
  color: #AAAAAA;
}

input {
  padding: 0 10rpx;
}

.icon-container {
  width: 30rpx;
  height: 60rpx;
  position: relative;
  float: right;
}

.delete-icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%)
}

.draw-notice {
  font-size: 22rpx;
  color: #AAAAAA;
  margin-top: 20rpx;
}