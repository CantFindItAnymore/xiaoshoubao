.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FAFAFA;
  padding: 0 45rpx;
  box-sizing: border-box;
}

.head-container {
  width: 100%;
  height: 226rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background: pink; */
}

.user-info {
  color: #585A60;
  height: 105rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.user-info > view:first-child {
  font-size: 36rpx;
}

.user-info > view:nth-child(2) {
  font-size: 28rpx;
}

.head-image {
  width: 106rpx;
  height: 106rpx;
}

.head-image>image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

/* //// */

.panel-container {
  width: 100%;
  height: 938rpx;
  /* background: pink; */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.footer {
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #CACACC;
}