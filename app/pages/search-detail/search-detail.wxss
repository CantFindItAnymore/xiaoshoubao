.container {
  height: 100%;
  background: #EFEFEF;
  padding: 60rpx 45rpx;
}

.detail-container {
  height: 486rpx;
  width: 660rpx;
  background: #fff;
  padding: 60rpx;
  box-shadow: 2rpx 2rpx 8rpx #888;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
}

.name-container {
  font-size: 32rpx;
  color:#585A60;
}
.blance-container {
  font-size: 36rpx;
  color:#585A60;
}

.blance-container>span {
  font-size: 28rpx;
}

.total-container,
.registe-time-container,
.attestate-time-container {
  font-size: 28rpx;
  color:#AAAAAA;
}


.had-attestated-container {
  font-size: 28rpx;
  color:#AAAAAA;
  display: flex;
  align-items: center;
}

.icon-container {
  display: inline-flex;
  height: 34rpx;
  width: 86rpx;
  margin-left: 10rpx;
}

.icon-container>image {
  height: 100%;
  width: 100%;
}